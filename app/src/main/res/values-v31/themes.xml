<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Marvel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowSplashScreenBackground">@drawable/launcher_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Marvel.Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="statusBarBackground">@color/md_theme_light_secondary</item>
        <item name="statusBarForeground">@color/md_theme_light_onSecondary</item>
        <item name="android:windowBackground">@color/md_theme_light_onSecondary</item>
        <item name="android:windowSplashScreenBackground">@drawable/launcher_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>